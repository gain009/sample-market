.single-container
  %heder.single-header
    
    
  %main.single-main
    .single-main__box
      .single-main__header
        %h2 お届け先の住所情報登録

      .single-main__form
        .single-main__content
          = form_for @destination do |f|
            = render "devise/shared/error_messages", resource: @destination
            .field
              = f.label :お名前（全角）
              .form-require
                %span 必須
              = f.text_field :family_name, autocomplete: "family_name", placeholder: '例)山田', class: 'input-left'
              = f.text_field :first_name, autocomplete: "first_name", placeholder: '例)太郎', class: 'input-right'
          
            .field
              = f.label :お名前カナ（全角）
              .form-require
                %span 必須
              = f.text_field :family_name_kana, autocomplete: "family_name_kana", placeholder: '例)ヤマダ', class: 'input-left'
              = f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: '例)タロウ', class: 'input-right'

            .field
              = f.label  :郵便番号
              .form-require
                %span 必須
              = f.text_field  :post_code, placeholder: '例)1234567(ハイフン不要)', :maxlength => 7, class: 'input-default'
            .field
              = f.label :都道府県
              .form-require
                %span 必須
              = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt:"選択してください"}, {class:"input-default"}
            .field
              = f.label :市町村
              .form-require
                %span 必須
              = f.text_field :city, placeholder: '例)千代田区丸の内', class: 'input-default'
            .field
              = f.label :番地
              .form-require
                %span 必須
              = f.text_field :block, placeholder: '例)１丁目１番１号', class: 'input-default'
            .field
              = f.label :"建物名 号室"
              = f.text_field :building_name, placeholder: '例)〇〇マンション　１０１号室', class: 'input-default'
            .field
              = f.label :電話番号
              = f.text_field :phone_number, placeholder: '例)090 0000 0000 ハイフン・空欄不要', class: 'input-default'
            .actions.single-content
              = f.submit "新規登録する", class: 'single-inner'
        -# = render "devise/shared/links"
